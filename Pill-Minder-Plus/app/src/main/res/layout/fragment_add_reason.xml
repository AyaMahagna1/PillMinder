<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_add_med_reason"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".medecinetasks.addingmedicine.AddMedicineActivity">

    <include layout="@layout/add_medicine_toolbar"/>

    <include
        android:id="@+id/include3"
        layout="@layout/add_medicine_header"
        tools:layout_editor_absoluteY="56dp" />


    <include
        layout="@layout/add_medicine_next_button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="573dp" />

    <EditText
        android:id="@+id/edit_text_med_reason_add_med"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/dodger_blue"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include3"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>